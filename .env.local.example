# Sanity Configuration
# Get these values from your Sanity project dashboard: https://www.sanity.io/manage

# Your Sanity Project ID (required)
NEXT_PUBLIC_SANITY_PROJECT_ID=your_project_id_here

# Your Sanity Dataset (usually "production" or "development")
NEXT_PUBLIC_SANITY_DATASET=production

# Sanity API Version (optional, defaults to latest)
NEXT_PUBLIC_SANITY_API_VERSION=2024-01-01

# Sanity API Read Token (optional, for private datasets)
# SANITY_API_READ_TOKEN=your_read_token_here
# Sanity Auth Token (for CLI: schema deploy, etc.). Create at sanity.io/manage → project → API → Tokens. Optional locally if you use `sanity login`.
# SANITY_AUTH_TOKEN=your_deploy_or_api_token_here
SANITY_REVALIDATE_SECRET=your_random_webhook_secret_here
ELEVENLABS_API_KEY=your_eleven_labs_api_key
ELEVENLABS_VOICE_ID=your_eleven_labs_voice_id
ELEVENLABS_MODEL_ID=eleven_multilingual_v2
BLOB_READ_WRITE_TOKEN=your_vercel_blog_read_write_token

SANITY_WRITE_TOKEN=your_write_token_here
GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here
LINKEDIN_CLIENT_ID=your_client_id_here
LINKEDIN_CLIENT_SECRET=your_client_secret_here
LINKEDIN_REDIRECT_URI=https://articles.resilientleadership.us/api/auth/linkedin/callback
DISTRIBUTION_SECRET=your_secure_random_string_here
NEXT_PUBLIC_DISTRIBUTION_SECRET=your_secure_random_string_here
SITE_BASE_URL=this_repos_url
MAIN_SITE_URL=your_main_site_url

INNGEST_EVENT_KEY=your_event_key_from_inngest_dashboard
INNGEST_SIGNING_KEY=your_signing_key_from_inngest_dashboard

# Sentry Configuration
# Create a Next.js project in Sentry and copy these values from project settings.
SENTRY_DSN=your_sentry_server_dsn
NEXT_PUBLIC_SENTRY_DSN=your_sentry_client_dsn
SENTRY_ORG=your_sentry_org_slug
SENTRY_PROJECT=your_sentry_project_slug

# Facebook App Configuration
# Get these values from your Facebook App dashboard: https://developers.facebook.com/apps
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_REDIRECT_URI=https://articles.resilientleadership.us/api/auth/facebook/callback
